<%- include('partials/header.ejs') %>
<%- include('nav.ejs') %>

<section>
    <table class="table table-bordered table-striped w-75 mx-auto mt-3 text-center">
        <thead class="table-dark">
            <th>User Name</th>
            <th>Password</th>
            <th>Email</th>
            <th>User Role</th>
            <th>User Active</th>
            <th>Date of Reg</th>
            <th>Edit</th>
            <th>Delete</th>
        </thead>
        <tbody>
            <% userData.forEach((user)=>{ %>
                <tr>
                    <td><%= user.userName%></td>
                    <td><%=user.password%></td>
                    <td><%=user.email%></td>
                    <td><%=user.hasRole%></td>
                    <td><%=user.isActive%></td>
                    <!-- <td><%=user.createdAt%></td> -->
                    <td><%= new Date(user.createdAt).toLocaleString()%></td>
                    <td>
                        <a href="/admin/editUser/<%= user._id%>" class="btn btn-primary btn-sm ">Edit</a>
                    </td>
                    <td>
                        <a href="/admin/deleteUser/<%= user._id%>" class="btn btn-danger btn-sm ">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>

<%- include('partials/footer.ejs') %>